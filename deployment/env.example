# EmotionalAI Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Database Configuration
MONGODB_URL=mongodb://mongodb:27017/emotionalai
MONGODB_USERNAME=emotionalai
MONGODB_PASSWORD=secure_password_123
MONGODB_DATABASE=emotionalai

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=secure_redis_123
REDIS_DB=0

# LLM Model Endpoints
MYTHOMAX_ENDPOINT=http://mythomax:11434
OPENCHAT_ENDPOINT=http://openchat:11434
QWEN2_ENDPOINT=http://qwen2:11434
KIMIK2_ENDPOINT=http://kimik2:11434

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WEBSOCKET_PORT=8001
LLM_ROUTER_PORT=8002

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_DIR=/app/data/uploads
MODEL_CACHE_DIR=/app/cache
LOG_DIR=/app/logs

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
METRICS_PORT=9090

# External Services (optional)
# OPENAI_API_KEY=your-openai-key
# ANTHROPIC_API_KEY=your-anthropic-key
# ELEVENLABS_API_KEY=your-elevenlabs-key

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Biometric Integration
BIOMETRIC_ENABLED=true
BIOMETRIC_SAMPLE_RATE=1000
BIOMETRIC_BUFFER_SIZE=1024

# Advanced Features
SYMBOLIC_FUSION_ENABLED=true
SCENE_INITIATION_ENABLED=true
TOUCH_JOURNAL_ENABLED=true
DYNAMIC_WAKE_WORD_ENABLED=true
MIRROR_RITUAL_ENABLED=true
PRIVATE_SCENES_ENABLED=true
BIOMETRIC_INTEGRATION_ENABLED=true

# Performance Tuning
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=60
LLM_TIMEOUT=120

# Development Settings (set to false in production)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOW_CREDENTIALS=true 