<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/romantic_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mia &amp; Solene"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/romantic_primary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Romantic AI Companion"
            android:textSize="16sp"
            android:textColor="@color/romantic_secondary"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Connection Status -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/status_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/romantic_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: Disconnected"
                    android:textSize="14sp"
                    android:textColor="@color/romantic_text"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/connectButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Connection"
                    android:background="@drawable/romantic_button_background"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Feature Test Buttons -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feature Tests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/romantic_primary"
            android:layout_marginBottom="16dp" />

        <!-- TTS Test -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/feature_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emotional TTS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/romantic_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ttsResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/romantic_text"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/testTTSButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test TTS (Love)"
                    android:background="@drawable/romantic_button_background"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Avatar Test -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/feature_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mood-Driven Avatar"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/romantic_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/avatarResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/romantic_text"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/testAvatarButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Avatar (Love)"
                    android:background="@drawable/romantic_button_background"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Memory Test -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/feature_card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Romantic Memory Engine"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/romantic_primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/memoryResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/romantic_text"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/testMemoryButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Memory System"
                    android:background="@drawable/romantic_button_background"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Version Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0 - Development"
            android:textSize="12sp"
            android:textColor="@color/romantic_secondary"
            android:gravity="center"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</ScrollView> 